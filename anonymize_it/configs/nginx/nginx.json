{
  "source": {
    "type": "json_file_reader",
    "params": {
      "filepath": "/opt/anonymize-it/data/nginx/*.json"
    }
  },
  "dest":{
    "type": "filesystem",
    "params": {
      "directory": "../output"
    }
  },
  "include": {
    "source.address" : "ipv4",
    "source.ip": "ipv4",
    "related.ip": "ipv4",
    "nginx.access.remote_ip_list": "ipv4"
  },
  "exclude": ["user.name"],
  "include_rest": true,
  "anonymizer": "lazy"
}
